<?xml version="1.0" encoding="utf-8"?>

<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="bottom"
    android:background="#00FFFFFF"
    app:umanoDragView="@id/drawer"
    app:umanoPanelHeight="200dp"
    app:umanoShadowHeight="5dp">
    <!--    app:umanoOverlay="false"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".ui.home.HomeFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.naver.maps.map.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <!--            <com.naver.maps.map.widget.LocationButtonView-->
            <!--                android:id="@+id/locationbuttonview"-->
            <!--                android:layout_width="50dp"-->
            <!--                android:layout_height="50dp"-->
            <!--                android:layout_gravity="top|right"-->
            <!--                android:layout_marginTop="70dp"-->
            <!--                android:layout_marginEnd="30dp" />-->
        </com.naver.maps.map.MapView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/drawer"
        android:background="@drawable/rounded_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="false"
        android:orientation="vertical">

        <View
            android:id="@+id/swipe"
            android:background="@drawable/swipe_tip_background"
            android:layout_width="60dp"
            android:layout_height="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"/>

        <RelativeLayout
            android:background="@drawable/drawer_background"
            android:layout_width="match_parent"
            android:layout_height="600dp">
            <LinearLayout
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bar">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="160.0dip">
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingBottom="10.0dip"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="60.0"
                        android:paddingEnd="5.0dip">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_weight="40.0">

                        </LinearLayout>
                        <TextView android:textSize="23.0sp"
                            android:textColor="#ff6b6b6b"
                            android:gravity="center_vertical"
                            android:id="@+id/tv_statNm"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_marginTop="10.0dip"
                            android:layout_weight="25.0"
                            android:fontFamily="@font/nanum_square_round_otfeb"
                            android:paddingStart="20.0dip"/>
                        <RelativeLayout
                            android:orientation="horizontal"
                            android:id="@+id/rl_address"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textSize="13.0sp"
                                android:textColor="#ff6b6b6b"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                android:id="@+id/tv_addr"
                                android:inputType="textMultiLine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10.0dip"
                                android:maxLines="3"
                                android:layout_centerVertical="true"
                                android:fontFamily="@font/nanum_square_round_otfr"
                                android:layout_marginStart="21.0dip" />
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="0.0dip"
                            android:layout_weight="50.0"
                            android:paddingStart="20.0dip">
                            <ImageView
                                android:id="@+id/chargetype_dccombo_x"
                                android:layout_width="0.0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="20.0"
                                app:srcCompat="@drawable/info_chargetype_dccombo_x" />
                            <ImageView
                                android:id="@+id/chargetype_acthree_x"
                                android:layout_width="0.0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="20.0"
                                app:srcCompat="@drawable/info_chargetype_acthree_x" />
                            <ImageView
                                android:id="@+id/chargetype_dcchademo_x"
                                android:layout_width="0.0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="20.0"
                                app:srcCompat="@drawable/info_chargetype_dcchademo_x" />
                            <ImageView
                                android:id="@+id/chargetype_lowspeed_x"
                                android:layout_width="0.0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="20.0"
                                app:srcCompat="@drawable/info_chargetype_lowspeed_x" />
                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="0.0dip"
                                android:layout_height="fill_parent"
                                android:layout_weight="20.0" />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:id="@id/imageView"
                        android:layout_width="0.0dip"
                        android:layout_height="fill_parent"
                        android:layout_weight="40.0"
                        app:srcCompat="@drawable/illust_electric" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/station_info"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20.0dip">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20.0dip"
                        android:layout_weight="20.0">
                        <TextView
                            android:textSize="18.0dip"
                            android:textColor="#ff6b6b6b"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="기본정보"
                            android:fontFamily="@font/nanum_square_round_otfeb"
                            android:paddingStart="20.0dip" />
                        <TextView
                            android:textSize="14.0dip"
                            android:textColor="#ff6b6b6b"
                            android:gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Station info"
                            android:paddingStart="8.0dip" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="80.0">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:background="@drawable/station_info_bar"
                            android:layout_width="fill_parent"
                            android:layout_height="120.0dip">
                            <ImageView
                                android:id="@+id/bottom_detail_info_logo"
                                android:paddingBottom="40.0dip"
                                android:layout_width="0.0dip"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="20.0dip"
                                android:layout_weight="2.0"
                                android:paddingStart="10.0dip"
                                android:paddingEnd="20.0dip"
                                android:layout_marginStart="20.0dip"
                                app:srcCompat="@drawable/icon" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="10.0dip"
                                android:layout_height="fill_parent"
                                android:layout_marginTop="10.0dip"
                                android:layout_marginBottom="40.0dip"
                                android:layout_weight="3.0">
                                <TextView
                                    android:textSize="15.0dip"
                                    android:ellipsize="end"
                                    android:gravity="center_vertical"
                                    android:id="@+id/station_name"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0.0dip"
                                    android:text="장소이름"
                                    android:singleLine="true"
                                    android:layout_weight="1.0"
                                    android:fontFamily="@font/nanum_square_round_otfeb"
                                    android:layout_marginEnd="20.0dip" />
                                <LinearLayout
                                    android:gravity="center_vertical"
                                    android:id="@+id/rl_address2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="0.0dip"
                                    android:layout_marginBottom="5.0dip"
                                    android:layout_weight="1.0"
                                    android:layout_marginEnd="20.0dip"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:textSize="10.0sp"
                                        android:ellipsize="end"
                                        android:id="@+id/station_address"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="주소"
                                        android:singleLine="true"
                                        android:layout_gravity="center_vertical"
                                        android:inputType="textMultiLine"
                                        android:maxLines="3"
                                        android:layout_centerVertical="true"
                                        android:fontFamily="@font/nanum_square_round_otfr" />
                                    <ImageView
                                        android:id="@+id/icon_copy"
                                        android:background="@drawable/icon_copy"
                                        android:visibility="visible"
                                        android:layout_width="7.0dip"
                                        android:layout_height="12.0dip"
                                        android:layout_toRightOf="@id/station_address"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="8.0dip"
                                        android:backgroundTint="#ff6b6b6b"
                                        android:layout_gravity="center_horizontal"/>
                                </LinearLayout>
<!--                                <LinearLayout-->
<!--                                    android:orientation="horizontal"-->
<!--                                    android:layout_width="fill_parent"-->
<!--                                    android:layout_height="0.0dip"-->
<!--                                    android:layout_weight="1.0">-->
<!--                                    <TextView-->
<!--                                        android:textSize="13.0dip"-->
<!--                                        android:id="@+id/stat"-->
<!--                                        android:layout_width="0.0dip"-->
<!--                                        android:layout_height="fill_parent"-->
<!--                                        android:layout_weight="90.0"-->
<!--                                        android:fontFamily="@font/nanum_square_round_otfeb" />-->
<!--                                </LinearLayout>-->
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/station_info2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20.0dip">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20.0dip">
                        <TextView
                            android:textSize="18.0dip"
                            android:textColor="#ff6b6b6b"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="충전정보"
                            android:fontFamily="@font/nanum_square_round_otfeb"
                            android:paddingStart="20.0dip" />
                        <TextView
                            android:textSize="14.0dip"
                            android:textColor="#ff6b6b6b"
                            android:gravity="bottom"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:text="Charging info"
                            android:paddingStart="8.0dip" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="80.0">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:background="@drawable/station_info_bar"
                            android:layout_width="fill_parent"
                            android:layout_height="120.0dip">
                            <LinearLayout
                                android:layout_width="140dip"
                                android:layout_height="60dip"
                                android:layout_marginLeft="10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="6.0" >
                                <TextView
                                    android:id="@+id/StatUpdDt"
                                    android:fontFamily="@font/nanum_square_round_otfeb"
                                    android:textSize="10.0sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="상태표시일"
                                    android:layout_marginLeft="42.5dp"
                                    android:inputType="textMultiLine"
                                    android:maxLines="3"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>
                            <ImageView
                                android:id="@+id/im_chgerCombo"
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:layout_weight="50.0"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/info_chargetype_dccombo_x" />
                            <ImageView
                                android:id="@+id/im_chgerAC3"
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:layout_weight="50.0"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/info_chargetype_acthree_x"/>
                            <ImageView
                                android:id="@+id/im_chgerChademo"
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:layout_weight="50.0"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/info_chargetype_dcchademo_x" />
                            <ImageView
                                android:id="@+id/im_chgerLow"
                                android:layout_width="60dip"
                                android:layout_height="60dip"
                                android:layout_weight="50.0"
                                android:layout_gravity="center_vertical"
                                app:srcCompat="@drawable/info_chargetype_lowspeed_x"/>
                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="30dip"
                                android:layout_height="fill_parent"
                                android:layout_marginRight="10dp"
                                android:layout_weight="6.0" />
                        </LinearLayout>

                        <!--                        <TextView-->
<!--                            android:id="@+id/tv_chgerType"-->
<!--                            android:layout_width="fill_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:divider="#ffffffff"-->
<!--                            android:dividerHeight="0.0px"-->
<!--                            android:layout_marginTop="30dp"-->
<!--                            android:layout_marginLeft="30dp"-->
<!--                            android:layout_marginRight="30dp"-->
<!--                            android:layout_marginBottom="10dp"/>-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>